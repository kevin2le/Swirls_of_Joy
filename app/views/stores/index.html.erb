<h2 class="font2">Store Locations</h2>
<h3 class="font2"><%= link_to '+Add Stores', new_store_path %></h3>
<div class="font">
    <dl class= "profile">
        <% @stores.each do |store| %>
        <div class="bckclr">
            <dl><%= image_tag store.image_content_type, size: "370x300" %></dl>
                <dd><%= link_to store.name, store_path(store) %> </dd>
                <dd><%= store.location %></dd>
                <dd><%= store.contact_info %></dd>
                <dd>Rating:<%= average_rating (store) %> </dd>
        </div>
        <% end %>
    </dl>
</div>