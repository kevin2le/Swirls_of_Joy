<div class="swirls">
    <h1>Share my Cone</h1>
        <h3>Feel free to post your opinions, pictures and<br> where you found some awesome ice cream</h3>
        <%= link_to "Create a Post", new_share_path %>
</div>
<div class= ".text-center">    
    <div class="font">
        <dl class= "profile">
            <% @shares.each do |share| %>
            <div class="bckclr">
                <dl><%= image_tag share.image_content_type, size: "370x300" %></dl>
                    <dd><%= share.nickname %> </dd>
                    <dd><%= share.location %></dd>
                    <dd><%= share.content %></dd>
            </div>
            <% end %>
        </dl>
    </div>
</div>



   
   